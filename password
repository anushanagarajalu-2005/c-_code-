#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[50];
    int hasUpper = 0, hasLower = 0, hasDigit = 0;
    int length;

    printf("Enter your password: ");
    scanf("%s", password);

    length = strlen(password);

    // Check criteria
    for (int i = 0; i < length; i++) {
        if (isupper(password[i])) hasUpper = 1;
        if (islower(password[i])) hasLower = 1;
        if (isdigit(password[i])) hasDigit = 1;
    }

    // Validation logic
    printf("\n--- Validation Results ---\n");
    if (length < 8) {
        printf("FAILED: Password must be at least 8 characters long.\n");
    } else if (!hasUpper) {
        printf("FAILED: Password must contain at least one uppercase letter.\n");
    } else if (!hasLower) {
        printf("FAILED: Password must contain at least one lowercase letter.\n");
    } else if (!hasDigit) {
        printf("FAILED: Password must contain at least one digit.\n");
    } else {
        printf("SUCCESS: Password is valid!\n");
    }

    return 0;
}
