#include <stdio.h>

int main() {
    int num, i;

    printf("--- Multiplication Table Generator ---\n");

    // Input the number for the table
    printf("Enter the number to generate its table: ");
    scanf("%d", &num);

    printf("\nMultiplication Table for %d:\n", num);
    printf("-------------------------------\n");

    // Loop from 1 to 10
    for (i = 1; i <= 10; i++) {
        // Calculation and printing in one step
        printf("%d  x  %d  =  %d\n", num, i, num * i);
    }

    printf("-------------------------------\n");

    return 0;
}
