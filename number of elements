#include <stdio.h>

int main() {
    int n, i;
    int arr[100];
    int max, min;

    printf("Enter the number of elements (1-100): ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    // Initialize max and min with the first element
    max = arr[0];
    min = arr[0];

    // Traverse the array to find extremes
    for (i = 1; i < n; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
        if (arr[i] < min) {
            min = arr[i];
        }
    }

    printf("\n------------------------------\n");
    printf("Largest element: %d\n", max);
    printf("Smallest element: %d\n", min);
    printf("------------------------------\n");

    return 0;
}
o/p:
Enter the number of elements (1-100): 5
Enter 5 elements:
Element 1: 10
Element 2: 20
Element 3: 50
Element 4: 90
Element 5: 70

------------------------------
Largest element: 90
Smallest element: 10
------------------------------
