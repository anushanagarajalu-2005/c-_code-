#include <stdio.h>

int main() {
    char name[50];
    int emp_id;
    float basic, hra, da, pf, gross, net;

    printf("--- Employee Salary Slip System ---\n");

    // Input Employee Details
    printf("Enter Employee Name: ");
    scanf("%s", name);
    printf("Enter Employee ID: ");
    scanf("%d", &emp_id);
    printf("Enter Basic Salary: $");
    scanf("%f", &basic);

    // Calculating Allowances and Deductions
    hra = basic * 0.20; // 20% of Basic
    da = basic * 0.10;  // 10% of Basic
    pf = basic * 0.05;  // 5% Deduction for Provident Fund

    gross = basic + hra + da;
    net = gross - pf;

    // Printing the Salary Slip
    printf("\n======================================\n");
    printf("           SALARY STATEMENT           \n");
    printf("======================================\n");
    printf("ID: %-15d Name: %s\n", emp_id, name);
    printf("--------------------------------------\n");
    printf("Earnings                Amount ($)    \n");
    printf("--------------------------------------\n");
    printf("Basic Salary          : %10.2f\n", basic);
    printf("HRA (20%%)             : %10.2f\n", hra);
    printf("DA  (10%%)             : %10.2f\n", da);
    printf("--------------------------------------\n");
    printf("GROSS SALARY          : %10.2f\n", gross);
    printf("--------------------------------------\n");
    printf("Deductions (PF 5%%)    : %10.2f\n", pf);
    printf("--------------------------------------\n");
    printf("NET SALARY (Take-home): %10.2f\n", net);
    printf("======================================\n");

    return 0;
}
