#include <stdio.h>

int main() {
    int n, i, topper_index;
    float marks[100], max_marks;
    char names[100][50]; // Array to store student names

    printf("--- Class Topper Finder ---\n");

    // Get number of students
    printf("Enter the number of students: ");
    scanf("%d", &n);

    // Input names and marks
    for (i = 0; i < n; i++) {
        printf("\nEnter name of student %d: ", i + 1);
        scanf("%s", names[i]);
        printf("Enter marks for %s: ", names[i]);
        scanf("%f", &marks[i]);
    }

    // Logic to find the highest marks
    max_marks = marks[0];
    topper_index = 0;

    for (i = 1; i < n; i++) {
        if (marks[i] > max_marks) {
            max_marks = marks[i];
            topper_index = i; // Keep track of which student has the max marks
        }
    }

    // Display the Topper
    printf("\n====================================");
    printf("\n           TOPPER DETAILS           ");
    printf("\n====================================");
    printf("\nName        : %s", names[topper_index]);
    printf("\nRoll Number : %d", topper_index + 1);
    printf("\nMarks       : %.2f", max_marks);
    printf("\n====================================\n");

    return 0;
}
