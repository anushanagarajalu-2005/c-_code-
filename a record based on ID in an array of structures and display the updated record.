#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
    float gpa;
};

int main() {
    // Array of 3 students
    struct Student records[3] = {
        {101, "Alice", 3.8},
        {102, "Bob", 3.5},
        {103, "Charlie", 3.9}
    };

    int searchId, found = 0;

    printf("Enter Student ID to update: ");
    scanf("%d", &searchId);

    for (int i = 0; i < 3; i++) {
        if (records[i].id == searchId) {
            found = 1;
            
            printf("\nRecord Found! Current Details:\n");
            printf("Name: %s, GPA: %.2f\n", records[i].name, records[i].gpa);

            // Updating the record
            printf("\nEnter New Name: ");
            scanf(" %[^\n]s", records[i].name); // Reads string with spaces
            printf("Enter New GPA: ");
            scanf("%f", &records[i].gpa);

            printf("\n--- Update Successful ---");
            printf("\nUpdated Record Details:\n");
            printf("ID: %d\nName: %s\nGPA: %.2f\n", records[i].id, records[i].name, records[i].gpa);
            break; 
        }
    }

    if (!found) {
        printf("\nError: Student ID %d not found.\n", searchId);
    }

    return 0;
}
