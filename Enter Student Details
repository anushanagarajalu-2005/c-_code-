#include <stdio.h>

// Defining the structure
struct Student {
    char name[50];
    int rollNumber;
    float marks;
};

int main() {
    struct Student s;

    printf("--- Enter Student Details ---\n");
    
    printf("Enter Name: ");
    // Using fgets to allow names with spaces
    fgets(s.name, sizeof(s.name), stdin);
    
    printf("Enter Roll Number: ");
    scanf("%d", &s.rollNumber);
    
    printf("Enter Marks: ");
    scanf("%f", &s.marks);

    // Displaying the stored information
    printf("\n--- Student Record ---\n");
    printf("Name       : %s", s.name);
    printf("Roll No    : %d\n", s.rollNumber);
    printf("Marks      : %.2f\n", s.marks);

    return 0;
}
o/p:
--- Enter Student Details ---
Enter Name: Anusha
Enter Roll Number: 76
Enter Marks: 90

--- Student Record ---
Name       : Anusha
Roll No    : 76
Marks      : 90.00
