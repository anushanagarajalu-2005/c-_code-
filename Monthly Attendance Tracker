#include <stdio.h>

int main() {
    int total_days, i, status;
    int worked_count = 0;

    printf("--- Monthly Attendance Tracker ---\n");

    // Get the number of days in the month (28, 30, or 31)
    printf("Enter total number of days in the month: ");
    scanf("%d", &total_days);

    printf("\nInstructions: Enter 1 if you worked, 0 if you did not.\n");
    printf("--------------------------------------------------\n");

    // Loop through each day of the month
    for (i = 1; i <= total_days; i++) {
        printf("Day %d - Did you work? (1/0): ", i);
        scanf("%d", &status);

        // If the user enters 1, increment the counter
        if (status == 1) {
            worked_count++;
        }
    }

    // Display final summary
    printf("\n--- Attendance Summary ---\n");
    printf("Total days in month : %d\n", total_days);
    printf("Total days worked   : %d\n", worked_count);
    printf("Total days off      : %d\n", total_days - worked_count);
    printf("--------------------------\n");

    return 0;
}
o/p:
