#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[100];
    int i, count = 0;

    printf("Enter a string: ");
    // fgets is used to read strings with spaces
    fgets(str, sizeof(str), stdin);

    // Iterating through the string character by character
    for (i = 0; str[i] != '\0'; i++) {
        // Convert current character to lowercase for a uniform check
        char ch = tolower(str[i]);

        // Check if the character is a vowel
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            count++;
        }
    }

    printf("Total number of vowels: %d\n", count);

    return 0;
}
o/p:
Enter a string: programming
Total number of vowels: 3
