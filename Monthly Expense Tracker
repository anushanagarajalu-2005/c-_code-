#include <stdio.h>

int main() {
    int num_items, i;
    float expenses[50], total = 0.0;
    char category[50][30]; // To store names of expense categories

    printf("--- Monthly Expense Tracker ---\n");

    // Get the number of expense categories
    printf("How many expense categories do you have? ");
    scanf("%d", &num_items);

    // Input Phase
    for (i = 0; i < num_items; i++) {
        printf("\nEnter name of category %d (e.g., Rent): ", i + 1);
        scanf("%s", category[i]);
        printf("Enter amount for %s: $", category[i]);
        scanf("%f", &expenses[i]);

        // Add to running total
        total += expenses[i];
    }

    // Output Report
    printf("\n===============================");
    printf("\n    MONTHLY EXPENSE REPORT     ");
    printf("\n===============================");
    printf("\n%-15s %10s", "Category", "Amount");
    printf("\n-------------------------------");

    for (i = 0; i < num_items; i++) {
        printf("\n%-15s $%10.2f", category[i], expenses[i]);
    }

    printf("\n-------------------------------");
    printf("\nTOTAL EXPENSES:  $%10.2f", total);
    printf("\n===============================\n");
    return 0;
}
o/p:
