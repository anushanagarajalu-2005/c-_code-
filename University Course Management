#include <stdio.h>
#include <string.h>

// Define a structure to store course details
struct Course {
    char code[10];
    char title[50];
    int credits;
    char instructor[50];
};

int main() {
    int n, i;

    printf("University Course Management\n");
    printf("============================\n");
    printf("Enter the number of courses: ");
    scanf("%d", &n);

    // Array of structures to store 'n' courses
    struct Course c[n];

    // Input loop
    for(i = 0; i < n; i++) {
        printf("\nEnter details for Course %d\n", i + 1);
        
        printf("Course Code (e.g., CS101): ");
        scanf("%s", c[i].code);
        
        getchar(); // Clear newline buffer
        
        printf("Course Title: ");
        fgets(c[i].title, 50, stdin);
        c[i].title[strcspn(c[i].title, "\n")] = 0; // Remove newline

        printf("Credits: ");
        scanf("%d", &c[i].credits);

        getchar(); // Clear buffer
        printf("Instructor Name: ");
        fgets(c[i].instructor, 50, stdin);
        c[i].instructor[strcspn(c[i].instructor, "\n")] = 0;
    }

    // Displaying the records
    printf("\n--- Course Catalog ---\n");
    printf("%-10s %-25s %-8s %-20s\n", "Code", "Course Title", "Credits", "Instructor");
    printf("----------------------------------------------------------------------\n");

    for(i = 0; i < n; i++) {
        printf("%-10s %-25s %-8d %-20s\n", 
               c[i].code, c[i].title, c[i].credits, c[i].instructor);
    }

    return 0;
}
