#include <stdio.h>
#include <string.h>

// Define a structure to store student details and marks
struct Student {
    int rollNo;
    char name[50];
    float marks[3]; // Array to store marks for 3 subjects
    float total;
};

int main() {
    int n, i, j;

    printf("Student Grading System\n");
    printf("======================\n");
    printf("Enter the number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    for(i = 0; i < n; i++) {
        s[i].total = 0; // Initialize total to zero
        
        printf("\nEnter details for Student %d\n", i + 1);
        printf("Roll Number: ");
        scanf("%d", &s[i].rollNo);
        
        getchar(); // Clear buffer
        printf("Name: ");
        fgets(s[i].name, 50, stdin);
        s[i].name[strcspn(s[i].name, "\n")] = 0;

        printf("Enter marks for 3 subjects:\n");
        for(j = 0; j < 3; j++) {
            printf("Subject %d: ", j + 1);
            scanf("%f", &s[i].marks[j]);
            s[i].total += s[i].marks[j]; // Adding marks to total
        }
    }

    // Displaying the results
    printf("\n--- Student Marksheet ---\n");
    printf("%-10s %-20s %-15s %-10s\n", "Roll No", "Name", "Marks (S1,S2,S3)", "Total");
    printf("------------------------------------------------------------\n");

    for(i = 0; i < n; i++) {
        printf("%-10d %-20s %-2.1f, %-2.1f, %-2.1f    %-10.2f\n", 
               s[i].rollNo, s[i].name, s[i].marks[0], s[i].marks[1], s[i].marks[2], s[i].total);
    }

    return 0;
}
