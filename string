#include <stdio.h>

int main() {
    char str[100];
    int count = 0;

    printf("Enter a string: ");
    // Using fgets to allow spaces in the input string
    fgets(str, sizeof(str), stdin);

    // Loop through the string until the null terminator is reached
    while (str[count] != '\0') {
        // We check for '\n' because fgets includes the newline character
        if (str[count] == '\n') {
            break;
        }
        count++;
    }

    printf("Total number of characters: %d\n", count);

    return 0;
}
o/p:
Enter a string: Hello
Total number of characters: 5
