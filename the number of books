#include <stdio.h>

// Defining the structure
struct Book {
    int id;
    char title[100];
    float price;
};

int main() {
    int n, i;
    struct Book b[50]; // Array of structures to store multiple books

    printf("Enter the number of books: ");
    scanf("%d", &n);

    // Reading details for N books
    for (i = 0; i < n; i++) {
        printf("\nEnter details for Book %d\n", i + 1);
        
        printf("Enter Book ID: ");
        scanf("%d", &b[i].id);
        
        // Use getchar() to consume the newline character left by scanf
        getchar(); 
        
        printf("Enter Title: ");
        fgets(b[i].title, sizeof(b[i].title), stdin);
        
        // Removing the newline character added by fgets
        for(int j = 0; b[i].title[j] != '\0'; j++) {
            if(b[i].title[j] == '\n') b[i].title[j] = '\0';
        }

        printf("Enter Price: ");
        scanf("%f", &b[i].price);
    }

    // Displaying book details
    printf("\n--- Displaying Book Details ---\n");
    printf("%-10s %-25s %-10s\n", "ID", "Title", "Price");
    printf("---------------------------------------------\n");
    
    for (i = 0; i < n; i++) {
        printf("%-10d %-25s $%-10.2f\n", b[i].id, b[i].title, b[i].price);
    }

    return 0;
}
